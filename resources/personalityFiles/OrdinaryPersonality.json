{
  "initialState": "Greetings",
  "states": [
    {
      "identifier": "Greetings",
      "implementation" : "roboy.newDialog.states.GreetingsState",
      "fallback" : "RandomAnswer",
      "transitions" : {
        "greetingDetected" : "Intro",
        "noHello" : "Farewell"
      }
    },
    {
      "identifier": "Intro",
      "implementation" : "roboy.newDialog.states.IntroductionState",
      "transitions" : {
        "next" : "Farewell",
        "knownPerson": "FollowUp",
        "newPerson": "PersonalQA"
      },
      "parameters" : {
        "introductionSentence" : "My name is Roboy!"
      }
    },
    {
      "identifier": "FollowUp",
      "implementation": "roboy.newDialog.states.FUAState",
      "transitions": {
        "next": "Farewell",
        "nextPersonalQA": "PersonalQA",
        "stay": "FollowUp"
      },
      "parameters" : {
        "qaFile" : "sentences/QAList.json"
      }
    },
    {
      "identifier": "PersonalQA",
      "implementation": "roboy.newDialog.states.PIAState",
      "transitions": {
        "next": "Farewell"
      },
      "parameters" : {
        "qaFile" : "sentences/QAList.json"
      }
    },
    {
      "identifier": "Farewell",
      "implementation" : "roboy.newDialog.examples.toyStates.ToyFarewellState",
      "transitions" : {}
    },
    {
      "identifier": "RandomAnswer",
      "implementation" : "roboy.newDialog.examples.toyStates.ToyRandomAnswerState",
      "transitions" : {
        "next" : "Farewell"
      }
    }
  ]
}